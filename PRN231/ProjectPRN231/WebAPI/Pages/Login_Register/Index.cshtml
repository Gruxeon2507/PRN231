@page
@model WebAPI.Pages.Login_Register.IndexModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <h1>Login</h1>
            <form class="form-signin">
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <button type="submit" class="login-btn">Login</button>
                <button id="registerBtn" class="register-btn" onclick="redirectToRegister()">Register</button>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        function redirectToRegister() {
            window.location.href = "/login_register/register";
        }

        document.addEventListener("DOMContentLoaded", function () {
            document.querySelector("form.form-signin").addEventListener("submit", function (event) {
                event.preventDefault();

                var email = document.getElementById("username").value;
                var password = document.getElementById("password").value;

                var data = {
                    Email: email,
                    MatKhau: password
                };

                $.ajax({
                    type: "POST",
                    url: "https://localhost:7150/login",
                    contentType: "application/json",
                    data: JSON.stringify(data),
                    success: function (response) {
                        var idNguoiDung = response.idNguoiDung;
                        var vaiTro = response.vaiTro;
                        console.log(idNguoiDung, vaiTro);
                        localStorage.setItem("idNguoiDung", idNguoiDung);
                        if (vaiTro === 0) {
                            alert("Login successful");
                            window.location.href = "/Admin";
                        } else if (vaiTro === 1) {
                            alert("Login successful");
                            window.location.href = "/managementgiangvien";
                        } else if (vaiTro === 2) {
                            alert("Login successful");
                            window.location.href = "/managementsinhvien";
                        }
                    },
                    error: function (xhr, textStatus, errorThrown) {
                        alert(xhr.responseText);
                    }
                });
            });
        });
    </script>
</body>
</html>